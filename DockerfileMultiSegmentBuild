FROM go:1.17.5 AS build
ENV GOOS=LINUX \
    GOPROXY=https://goproxy.cn \
    GO111MODULE=off \	
    CGO_ENABLED=0 \	
    GOOS=linux \	
    GOARCH=amd64
WORKDIR /gobuild
COPY . /gobuild/
RUN go build -o httpserver .


FROM scratch
COPY  --from=build  /gobuild/httpserver /httpserver
ENTRYPOINT [ "/httpserver" ]